{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "paths": {
      "*": ["./node_modules/*"]
    },
    "baseUrl": ".",
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "outDir": "./dist"
  },
  "include": ["./src/**/*.ts", "./src/*.ts"],
  "exclude": ["node_modules"]
}
